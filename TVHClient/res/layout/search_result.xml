<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/p_series_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Sitcom"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"
            android:textColor="@android:color/holo_blue_dark" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/p_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="02.12.2014"
                android:textAppearance="@android:style/TextAppearance.Holo.Small"
                android:textColor="@android:color/holo_red_dark" >
            </TextView>

            <TextView
                android:id="@+id/p_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="3dip"
                android:text="11:30 - 12:30"
                android:textAppearance="@android:style/TextAppearance.Holo.Small"
                android:textColor="@android:color/holo_red_dark" >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/p_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ice age 3- der Winter kommt wieder"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/p_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Es geht um eine Geschichte in einem Wald. Dieses mal wird die Spannung nextrem aufgebaut. Macht euch bereit auf die nÃ¤chte Ladung Adrenalin. "
            android:textAppearance="@android:style/TextAppearance.Holo.Small"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/expand_prog_btn"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:button="@drawable/expand" />

</LinearLayout>